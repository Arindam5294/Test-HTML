    <!--
        JavaScript for interactive elements
    -->
    <script>
        // Get the hamburger menu button and the navigation links containers
        const menuButton = document.getElementById('menu-button');
        const navLinks = document.getElementById('nav-links');
        const mobileNavLinks = document.getElementById('mobile-nav-links');
        const volunteerForm = document.getElementById('volunteer-form');
        const formMessage = document.getElementById('form-message');
        
        // Toggle the mobile menu on button click
        menuButton.addEventListener('click', () => {
            menuButton.classList.toggle('open');
            mobileNavLinks.classList.toggle('hidden');
        });

        // Hide the mobile menu when a link is clicked
        mobileNavLinks.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                menuButton.classList.remove('open');
                mobileNavLinks.classList.add('hidden');
            });
        });

        // Handle the form submission
        volunteerForm.addEventListener('submit', (event) => {
            event.preventDefault(); // Prevent the default form submission
            // In a real application, you would send this data to a server.
            // For this assignment, we'll just show a success message.
            console.log('Form submitted!');
            
            // Clear the form fields
            volunteerForm.reset();
            
            // Show the success message
            formMessage.classList.remove('hidden');
            
            // Optionally, hide the message after a few seconds
            setTimeout(() => {
                formMessage.classList.add('hidden');
            }, 5000);
        });

    </script>

